<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- ðŸ”‡ HARD STOP: Mute ALL Kafka logs -->
    <logger name="org.apache.kafka" level="OFF" />
    <logger name="org.apache.kafka.clients" level="OFF" />
    <logger name="org.apache.kafka.common" level="OFF" />
    <logger name="kafka" level="OFF" />
    <logger name="org.I0Itec.zkclient" level="OFF" />
    <logger name="org.apache.zookeeper" level="OFF" />

    <!-- Mute Akka internals if needed -->
    <logger name="akka" level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
